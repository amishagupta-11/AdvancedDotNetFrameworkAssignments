@model dynamic  

@{
    ViewData["Title"] = "Customer Information";
}

<h1>@ViewData["Title"]</h1>

@if (Model is IEnumerable<AdapterDesignPatternSample.Models.Customers>)
{
    <!-- Display all customers in a table -->
    <h3>All Customers</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model is AdapterDesignPatternSample.Models.Customers)
{
    <!-- Display details of a single customer -->
    <h3>Customer Details</h3>
    <table class="table table-bordered">
        <tr>
            <th>Customer ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
    </table>
}
