@model FactoryPatternSample.ViewModels.NotificationViewModel

<h1>Send Notification</h1>

<form method="post" asp-action="SendNotification" asp-controller="Notification">
    <div>
        <label for="type">Notification Type:</label>
        <select id="type" asp-for="Type">
            <option value="email">Email</option>
            <option value="sms">SMS</option>
        </select>
    </div>
    <div>
        <label for="message">Message:</label>
        <input type="text" asp-for="Message" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div>
        <label for="recipient">Recipient Id:</label>
        <input type="email" asp-for="Recipient" />
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>
    <button type="submit">Send</button>
</form>

@if (Model.Result != null)
{
    <p style="color: green;">@Model.Result</p>
}

@if (!ViewData.ModelState.IsValid)
{
    <p style="color: red;">Please correct the errors and try again.</p>
}
